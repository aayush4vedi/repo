<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.swifiic.android.app.msngr"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="de.tubs.ibr.dtn.permission.DTN_COMMUNICATION"/>
    
    <uses-permission android:name="swifiic.suta.SUTA" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="in.swifiic.android.app.msngr.TestActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name="in.swifiic.android.app.lib.GenericService" />

        <activity android:label="Select User"
            android:name="in.swifiic.android.app.lib.ui.UserChooserActivity" />
        
   	    <receiver
	        android:enabled="true"
	        android:name="in.swifiic.android.app.lib.IBRDtnReceiver"
	        android:exported="true"
	        android:permission="de.tubs.ibr.dtn.permission.DTN_SERVER">
	        <!-- Add intent filter for notification of incoming bundles -->
	        <intent-filter>
	            <action android:name="de.tubs.ibr.dtn.intent.RECEIVE" />
	            <category android:name="in.swifiic.android.app.msngr" />
	        </intent-filter>
	        <!-- Add intent filter for status reports generated by the DTN service -->
	        <intent-filter>
	            <action android:name="de.tubs.ibr.dtn.intent.STATUS_REPORT" />
	            <category android:name="in.swifiic.android.app.msngr" />
	        </intent-filter>
	    </receiver>
        
    </application>
   	    
</manifest>
